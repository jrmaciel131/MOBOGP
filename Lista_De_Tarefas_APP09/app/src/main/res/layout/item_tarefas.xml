<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_height="150dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" app:cardBackgroundColor="#80DDC529" android:layout_margin="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/txtTarefa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Tarefa"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintHorizontal_bias="0.061"
                    android:textAlignment="center">
            </TextView>
            <TextView
                    android:id="@+id/txtAula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Aula"
                    android:layout_marginTop="68dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtTarefa"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.098"
                    android:textAlignment="center">
            </TextView>
            <TextView
                    android:id="@+id/txtDificuldade"
                    android:layout_width="126dp"
                    android:layout_height="53dp"
                    tools:text="Dificuldade"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txtTarefa"
                    android:textAlignment="center"
                    app:layout_constraintHorizontal_bias="0.942">
            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>